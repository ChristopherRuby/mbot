# Configuration MongoDB Movies Analytics
# =====================================

# Configuration MongoDB Atlas
# Votre chaîne de connexion MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Base de données et collection (ne pas modifier)
MONGODB_DATABASE=sample_mflix
MONGODB_COLLECTION=movies

# Configuration API Perplexity
# Votre clé API Perplexity pour génération de requêtes
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Configuration de sécurité (optionnel)
# Activer en production pour applications métier
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# Configuration pour reverse proxy (production)
# Désactiver si vous utilisez Nginx/Apache
STREAMLIT_SERVER_BASE_URL_PATH=""
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=127.0.0.1

# Niveau de logs pour environnement business
STREAMLIT_LOGGER_LEVEL=INFO